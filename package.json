{
  "name": "ts-expense-tracker",
  "version": "1.0.0",
  "description": "Simple expense tracker",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/server",
    "build:server": "tsc",
    "watch:server": "tsc -w",
    "build:client": "tsc -p ./client",
    "watch:client": "tsc -w -p ./client",
    "server": "nodemon dist/server",
    "client": "npm start --prefix client",
    "build:all": "npm run build:server && npm run build:client",
    "run:all": "concurrently \"npm run watch:server\" \"npm run server\" \"npm run watch:client\" \"npm run client\"",
    "dev": "npm run build:all && npm run run:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leemun1/ts-expense-tracker.git"
  },
  "author": "Mike Lee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leemun1/ts-expense-tracker/issues"
  },
  "homepage": "https://github.com/leemun1/ts-expense-tracker#readme",
  "dependencies": {
    "@types/mongoose": "^5.7.7",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/morgan": "^1.9.0",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2"
  }
}
